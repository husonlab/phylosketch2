<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="rootPane" prefHeight="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="phylosketch.window.MainWindowController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <BorderPane>
                <center>
                    <AnchorPane fx:id="centerAnchorPane" BorderPane.alignment="CENTER">
                        <children>
                            <StackPane fx:id="centerPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                        </children>
                    </AnchorPane>
                </center>
                <top>
                    <VBox fx:id="firstVBox" BorderPane.alignment="CENTER">
                        <children>
                            <BorderPane fx:id="toolBorderPane" prefHeight="32.0" styleClass="tool-bar">
                                <left>
                                    <HBox fx:id="leftHBox" alignment="CENTER" spacing="5.0"
                                          BorderPane.alignment="CENTER">
                                        <children>
                                            <MenuButton fx:id="modeMenuButton" mnemonicParsing="false"
                                                        text="Edit Mode"/>
                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"/>
                                            <Button fx:id="importButton" text="Import"/>
                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"/>
                                            <MenuButton fx:id="fileMenuButton" maxHeight="-Infinity"
                                                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                                        mnemonicParsing="false" text="Files">
                                                <tooltip>
                                                    <Tooltip text="File items"/>
                                                </tooltip>
                                                <items>
                                                    <MenuItem fx:id="newRecentFileMenuItem" mnemonicParsing="false"
                                                              text="New..."/>
                                                    <MenuItem fx:id="openRecentFileMenuItem" mnemonicParsing="false"
                                                              text="Open..."/>
                                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                                </items>
                                            </MenuButton>

                                            <MenuButton fx:id="selectMenuButton" maxHeight="-Infinity"
                                                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                                        mnemonicParsing="false" text="Select">
                                                <tooltip>
                                                    <Tooltip text="Select nodes and edges"/>
                                                </tooltip>
                                            </MenuButton>
                                            <MenuButton fx:id="layoutMenuButton" maxHeight="-Infinity"
                                                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                                        mnemonicParsing="false" text="Layout">
                                                <tooltip>
                                                    <Tooltip text="Edge layout"/>
                                                </tooltip>
                                            </MenuButton>
                                            <ToggleButton fx:id="showSettingsButton" mnemonicParsing="false"
                                                          text="Settings"/>
                                            <Region layoutX="151.0" layoutY="10.0" maxWidth="1.0" minWidth="1.0"
                                                    prefHeight="20.0" prefWidth="1.0"/>
                                            <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete">
                                                <tooltip>
                                                    <Tooltip text="Delete selected nodes and edges"/>
                                                </tooltip>
                                            </Button>
                                            <MenuButton fx:id="captureMenuButton" mnemonicParsing="false"
                                                        text="Capture">
                                                <tooltip>
                                                    <Tooltip text="Capture phylogeny from image"/>
                                                </tooltip>
                                                <items>
                                                    <CheckMenuItem fx:id="showCaptureParametersItem"
                                                                   text="Parameters..."/>
                                                    <MenuItem fx:id="loadCaptureImageItem" mnemonicParsing="false"
                                                              text="Load Image..."/>
                                                    <MenuItem fx:id="clearCaptureImageItem" mnemonicParsing="false"
                                                              text="Remove Image"/>
                                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                                    <CheckMenuItem fx:id="showCaptureRootLocationItem"
                                                                   mnemonicParsing="false" text="Place Root"/>
                                                    <CheckMenuItem fx:id="captureLabelsItem" mnemonicParsing="false"
                                                                   text="Capture Labels"/>
                                                    <CheckMenuItem fx:id="captureLinesItem" mnemonicParsing="false"
                                                                   text="Capture Lines"/>
                                                    <CheckMenuItem fx:id="capturePhylogenyItem"
                                                                   mnemonicParsing="false" text="Capture Phylogeny"/>
                                                </items>
                                            </MenuButton>
                                        </children>
                                    </HBox>
                                </left>
                                <right>
                                    <HBox fx:id="rightHBox" alignment="CENTER" spacing="5.0"
                                          BorderPane.alignment="CENTER">
                                        <children>
                                            <Button fx:id="undoButton" mnemonicParsing="false" text="Undo"/>
                                            <Button fx:id="redoButton" mnemonicParsing="false" text="Redo"/>

                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"
                                                    HBox.hgrow="NEVER"/>
                                            <Button fx:id="zoomInButton" mnemonicParsing="false" text="Zoom In"/>
                                            <Button fx:id="zoomOutButton" mnemonicParsing="false" text="Zoom Out"/>
                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"
                                                    HBox.hgrow="NEVER"/>
                                            <ToggleButton fx:id="findButton" mnemonicParsing="false" text="Find"
                                                          HBox.hgrow="NEVER"/>
                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"
                                                    HBox.hgrow="NEVER"/>
                                            <Button fx:id="selectButton" mnemonicParsing="false" text="Select"
                                                    HBox.hgrow="NEVER">
                                                <tooltip>
                                                    <Tooltip text="Extend selection"/>
                                                </tooltip>
                                            </Button>
                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"
                                                    HBox.hgrow="NEVER"/>
                                            <MenuButton fx:id="exportMenuButton" mnemonicParsing="false" text="Export">
                                                <items>
                                                    <MenuItem fx:id="copyExportMenuItem" mnemonicParsing="false"
                                                              text="Copy"/>
                                                    <MenuItem fx:id="copyImageExportMenuItem" mnemonicParsing="false"
                                                              text="Copy Image"/>
                                                    <MenuItem fx:id="exportExportMenuItem" mnemonicParsing="false"
                                                              text="Export data..."/>
                                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                                    <CheckMenuItem fx:id="showNewick" mnemonicParsing="false"
                                                                   text="Show Newick"/>
                                                    <CheckMenuItem fx:id="showQRCode" mnemonicParsing="false"
                                                                   text="Show QR Code"/>
                                                </items>
                                            </MenuButton>
                                            <Region maxWidth="1.0" minWidth="1.0" prefHeight="20.0" prefWidth="1.0"
                                                    HBox.hgrow="NEVER"/>
                                        </children>
                                    </HBox>
                                </right>
                            </BorderPane>
                            <HBox fx:id="overflowHBox" prefHeight="32.0" styleClass="tool-bar"/>
                        </children>
                    </VBox>
                </top>
            </BorderPane>
        </center>
        <top>
            <VBox fx:id="topVBox" BorderPane.alignment="CENTER">
                <children>
                    <MenuBar fx:id="menuBar">
                        <menus>
                            <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                                <items>
                                    <MenuItem fx:id="newMenuItem" mnemonicParsing="false" text="New...">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="N" control="UP" meta="DOWN" shift="UP"
                                                                shortcut="UP"/>
                                        </accelerator>
                                    </MenuItem>
                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open...">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="O" control="UP" meta="DOWN" shift="UP"
                                                                shortcut="UP"/>
                                        </accelerator>
                                    </MenuItem>
                                    <Menu fx:id="recentFilesMenu" mnemonicParsing="false" text="Recent"/>
                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <MenuItem fx:id="openImageFileItem" mnemonicParsing="false" text="Load Image..."/>

                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <Menu fx:id="exportMenu" mnemonicParsing="false" text="Export">
