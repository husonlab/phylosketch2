                                            <KeyCodeCombination alt="UP" code="C" control="UP" meta="DOWN" shift="UP"
                                                                shortcut="UP"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="copyImageMenuItem" mnemonicParsing="false" text="Copy Image">
