                                            <KeyCodeCombination alt="UP" code="M" control="UP" meta="UP"
                                                                shift="UP" shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="deleteThruNodesMenuItem" mnemonicParsing="false"
                                              text="Remove Thru Nodes">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="T" control="UP" meta="UP" shift="UP"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="reverseEdgesMenuItem" mnemonicParsing="false"
                                              text="Reverse Edges">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="E" control="UP" meta="UP" shift="UP"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="crossEdgesMenuItem" mnemonicParsing="false"
                                              text="Fix Crossing Edges">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="E" control="UP" meta="UP" shift="DOWN"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="declareRootMenuItem" text="Declare Root"/>
                                    <MenuItem fx:id="declareTransferAcceptorMenuItem" text="Declare Transfer Acceptor"/>

                                    <MenuItem fx:id="induceMenuItem" text="Induce"/>
                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <Menu fx:id="modeMenu" mnemonicParsing="false" text="Mode">
                                        <items>
                                            <RadioMenuItem fx:id="editModeItem" mnemonicParsing="false"
                                                           text="Edit Mode">
                                            </RadioMenuItem>
                                            <RadioMenuItem fx:id="moveModeItem" mnemonicParsing="false"
                                                           text="Move Mode">
                                            </RadioMenuItem>
                                            <RadioMenuItem fx:id="viewModeItem" mnemonicParsing="false"
                                                           text="View Mode">
                                            </RadioMenuItem>
                                            <RadioMenuItem fx:id="captureModeItem" mnemonicParsing="false"
                                                           text="Capture Mode">
                                            </RadioMenuItem>
                                        </items>
                                    </Menu>

                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <MenuItem fx:id="findMenuItem" mnemonicParsing="false" text="Find...">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="F" control="UP" meta="DOWN" shift="UP"
                                                                shortcut="UP"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="findAgainMenuItem" mnemonicParsing="false" text="Find Again">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="G" control="UP" meta="DOWN" shift="UP"
                                                                shortcut="UP"/>
                                        </accelerator>
                                    </MenuItem>
                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <MenuItem fx:id="addLSAEdgeMenuItem" mnemonicParsing="false" text="Add LSA Edges"/>

                                </items>
                            </Menu>
                            <Menu fx:id="selectMenu" mnemonicParsing="false" text="Select">
                                <items>
                                    <MenuItem fx:id="selectAllMenuItem" text="All">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="UP"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="selectNoneMenuItem" text="None">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="DOWN"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="extendSelectionMenuItem" text="Extend">
                                    </MenuItem>
                                    <MenuItem fx:id="selectInvertMenuItem" text="Invert">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="I" control="UP" meta="UP" shift="UP"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>


                                    <SeparatorMenuItem mnemonicParsing="false"/>
                                    <MenuItem fx:id="selectRootsMenuItem" text="Roots"/>
                                    <MenuItem fx:id="selectLeavesMenuItem" text="Leaves">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="L" control="UP" meta="UP" shift="UP"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="selectTreeNodesMenuItem" text="Tree Nodes">
                                    </MenuItem>
                                    <MenuItem fx:id="selectReticulateNodesMenuitem" text="Reticulate Nodes"/>
                                    <MenuItem fx:id="selectThruNodesMenuItem" text="Thru Nodes"/>
                                    <SeparatorMenuItem mnemonicParsing="false"/>

                                    <MenuItem fx:id="selectTreeEdgesMenuItem" text="Tree Edges">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="T" control="UP" meta="UP" shift="DOWN"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="selectReticulateEdgesMenuItem" text="Reticulate Edges">
                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="R" control="UP" meta="UP" shift="DOWN"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                    <MenuItem fx:id="selectInEdgesMenuItem" text="In Edges">
