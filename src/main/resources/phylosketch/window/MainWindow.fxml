                                        <accelerator>
                                            <KeyCodeCombination alt="UP" code="P" control="UP" meta="UP" shift="UP"
                                                                shortcut="DOWN"/>
                                        </accelerator>
                                    </MenuItem>
                                </items>
                            </Menu>
                            <Menu fx:id="labelsMenu" mnemonicParsing="false" text="Labels">
